<Page
    x:Class="SideHustleNZ.EmployeeHome"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SideHustleNZ"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/bricks.jpg"/>
        </Grid.Background>
        <Image x:ConnectionId='2' HorizontalAlignment="Left" Height="35" 
               VerticalAlignment="Top" Width="38"                
               Source="/Assets/home.png" Canvas.ZIndex="3" 
               Visibility="Visible"                       />
        <TextBlock
            Text="Employee Home"
            HorizontalAlignment="Center" VerticalAlignment="Top" 
            FontSize="15" Grid.Column="1" Width="137" Height="54" FontFamily="Yu Gothic"  TextAlignment="Center"
        />
        <Image x:ConnectionId='3' HorizontalAlignment="Center" Height="98" 
               VerticalAlignment="Center" Width="133"                
               Source="/Assets/home.png" Canvas.ZIndex="3" Grid.Row="1" Grid.Column="1" 
               Visibility="Visible"                       />
        
        <Image x:ConnectionId='4' HorizontalAlignment="Center" Height="98" 
               VerticalAlignment="Center" Width="133"                
               Source="/Assets/gear.png" Canvas.ZIndex="3" Grid.Row="5" Grid.Column="1" 
               Visibility="Visible"                          />

        <Button x:ConnectionId='5' Content="Look at Jobs" x:Name="GoToJobs" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center"                           
                Grid.Row="3" Grid.Column="1" Width="300" Height="180" FontFamily="Yu Gothic" Background="White" Foreground="#FF2E4739" Opacity="0.75"
                />
        <Rectangle HorizontalAlignment="Center" Height="39" Margin="0,-4,0,0" Stroke="Black" VerticalAlignment="Top" Width="460" Grid.Column="0" Grid.ColumnSpan="5" Fill="#FFBDBDBD" Opacity="0.5" Canvas.ZIndex="-1" />

    </Grid>
</Page>

